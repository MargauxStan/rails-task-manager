<h1>My tasks</h1>
<% @tasks.each do |task| %>
    <% if task.completed %>
      <% done = "[X]" %>
    <% else %>
      <% done = "[ ]" %>
    <% end %>
  <li>
    <%= link_to "#{done} #{task.title}", task_path(task) %>
    <%= link_to "delete", "tasks/#{task.id}", method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
<% end %>

<%= link_to "create a new task", "tasks/new" %>
